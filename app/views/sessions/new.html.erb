<h1 class="is-size-2">Sign In</h1>
<% if @error %>
  <div>
    <p style="color: red"><%= @error %></p>
  </div>
<% end %>
<%= form_tag '/signin', method: :post do %>

  <div>
    <%= text_field_tag :username, nil, placeholder: 'username' %>
  </div>

  <div>
    <%= password_field_tag :password, nil, placeholder: 'password'%>
  </div>

  <div>
    <%= submit_tag("Sign In") %>
  </div>

<% end %> 
